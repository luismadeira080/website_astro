<style>
/* Reset & Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --color-bg: #0d0d0d;
    --color-text: #c7c7c7;
    --color-accent: #d3e97a;
    --color-dark: #1a1a1a;
    --font-primary: 'Inter', sans-serif;
    --font-heading: 'Bebas Neue', sans-serif;
}

body {
    font-family: var(--font-primary);
    background-color: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
    overflow-x: hidden;
}

/* Navigation */
.navigation {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px 60px;
    position: sticky;
    top: 0;
    background-color: var(--color-bg);
    z-index: 1000;
    transition: transform 0.3s ease;
}

.logo {
    font-family: var(--font-heading);
    font-size: 32px;
    letter-spacing: -0.32px;
    color: var(--color-text);
}

.nav-links {
    display: flex;
    gap: 32px;
}

.nav-links a {
    color: var(--color-text);
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
    letter-spacing: -0.48px;
    transition: color 0.3s ease;
}

.nav-links a:hover {
    color: var(--color-accent);
}

/* Dropdown Navigation */
.nav-dropdown {
    position: relative;
}

.nav-dropdown-toggle {
    display: flex;
    align-items: center;
    gap: 6px;
    background: none;
    border: none;
    color: var(--color-text);
    font-size: 16px;
    font-weight: 500;
    letter-spacing: -0.48px;
    cursor: pointer;
    padding: 0;
    font-family: var(--font-primary);
    transition: color 0.3s ease;
}

.nav-dropdown-toggle:hover {
    color: var(--color-accent);
}

.nav-dropdown-toggle svg {
    transition: transform 0.3s ease;
}

.nav-dropdown.active .nav-dropdown-toggle svg {
    transform: rotate(180deg);
}

.nav-dropdown-menu {
    position: absolute;
    top: calc(100% + 16px);
    left: 50%;
    transform: translateX(-50%);
    background-color: var(--color-dark);
    border: 1px solid #333;
    border-radius: 12px;
    padding: 8px;
    min-width: 160px;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    z-index: 1000;
}

.nav-dropdown.active .nav-dropdown-menu {
    opacity: 1;
    visibility: visible;
}

.nav-dropdown-menu a {
    display: block;
    padding: 12px 16px;
    color: var(--color-text);
    text-decoration: none;
    font-size: 15px;
    border-radius: 8px;
    transition: background-color 0.2s ease, color 0.2s ease;
}

.nav-dropdown-menu a:hover {
    background-color: rgba(211, 233, 122, 0.1);
    color: var(--color-accent);
}

.mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 8px;
    cursor: pointer;
}

.mobile-menu-toggle span {
    width: 32px;
    height: 2px;
    background-color: var(--color-text);
    transition: all 0.3s ease;
}

/* Hero Section */
.hero {
    display: grid;
    grid-template-columns: 1fr 600px;
    gap: 60px;
    padding: 80px 108px;
    min-height: calc(100vh - 96px);
    align-items: center;
}

.hero-text h1 {
    font-family: var(--font-heading);
    font-size: 88px;
    line-height: 1.1;
    letter-spacing: -0.88px;
    color: var(--color-text);
    margin-bottom: 24px;
}

.hero-subtitle {
    font-size: 18px;
    line-height: 1.5;
    color: var(--color-text);
    margin-bottom: 40px;
}

.hero-actions {
    display: flex;
    align-items: center;
    gap: 16px;
}

.btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background-color: var(--color-accent);
    color: var(--color-bg);
    padding: 16px 32px;
    border-radius: 27px;
    border: none;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    letter-spacing: 0.5px;
    transition: transform 0.3s ease, background-color 0.3s ease;
    cursor: pointer;
}

.btn-primary:hover {
    background-color: #c5db6f;
    transform: translateY(-2px);
}

.social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 54px;
    height: 54px;
    border: 1px solid var(--color-text);
    border-radius: 50%;
    color: var(--color-text);
    transition: all 0.3s ease;
    background: transparent;
    cursor: pointer;
}

.social-icon:hover {
    background-color: var(--color-accent);
    border-color: var(--color-accent);
    color: var(--color-bg);
}

.hero-image {
    width: 600px;
    height: 700px;
    background-color: var(--color-text);
    border-radius: 16px;
    overflow: hidden;
}

.hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
}

