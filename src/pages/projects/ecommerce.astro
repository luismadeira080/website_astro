<style>
/* Reset & Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --color-bg: #0d0d0d;
    --color-text: #c7c7c7;
    --color-accent: #d3e97a;
    --color-dark: #1a1a1a;
    --font-primary: 'Inter', sans-serif;
    --font-heading: 'Bebas Neue', sans-serif;
}

body {
    font-family: var(--font-primary);
    background-color: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
    overflow-x: hidden;
}

/* Navigation */
.navigation {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px 60px;
    position: sticky;
    top: 0;
    background-color: var(--color-bg);
    z-index: 1000;
}

.logo {
    font-family: var(--font-heading);
    font-size: 32px;
    letter-spacing: -0.32px;
    color: var(--color-text);
    text-decoration: none;
}

.nav-links {
    display: flex;
    gap: 32px;
}

.nav-links a {
    color: var(--color-text);
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
    letter-spacing: -0.48px;
    transition: color 0.3s ease;
}

.nav-links a:hover {
    color: var(--color-accent);
}

.mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 8px;
    cursor: pointer;
}

.mobile-menu-toggle span {
    width: 32px;
    height: 2px;
    background-color: var(--color-text);
    transition: all 0.3s ease;
}

/* Project Header */
.project-header {
    padding: 80px 108px 60px;
    max-width: 1200px;
}

.back-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--color-text);
    text-decoration: none;
    font-size: 16px;
    margin-bottom: 24px;
    transition: color 0.3s ease;
}

.back-link:hover {
    color: var(--color-accent);
}

.header-badge {
    margin-bottom: 24px;
}

.badge {
    display: inline-block;
    background-color: rgba(0, 0, 0, 0.7);
    color: var(--color-text);
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 14px;
    font-weight: 500;
}

.project-header h1 {
    font-family: var(--font-heading);
    font-size: 76px;
    line-height: 1.1;
    letter-spacing: -0.76px;
    margin-bottom: 24px;
    color: var(--color-text);
}

.project-description {
    font-size: 18px;
    line-height: 1.7;
    color: var(--color-text);
    max-width: 900px;
}

/* Project Hero Image */
.project-hero {
    padding: 0 108px 80px;
}

.project-hero-image {
    width: 100%;
    max-width: 1200px;
    height: 600px;
    background-color: var(--color-dark);
    border-radius: 16px;
    overflow: hidden;
}

.project-hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* Project Details */
.project-details {
    padding: 80px 108px;
    border-top: 1px solid #333;
}

.details-grid {
    display: grid;
    grid-template-columns: 400px 1fr;
    gap: 80px;
    max-width: 1200px;
}

.details-column h2 {
    font-family: var(--font-heading);
    font-size: 32px;
    letter-spacing: -0.32px;
    margin-bottom: 32px;
}

.info-list {
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.info-item {
    display: flex;
    justify-content: space-between;
    padding: 16px 0;
    border-bottom: 1px solid #333;
}

.info-label {
    font-size: 16px;
    color: var(--color-text);
}

.info-value {
    font-size: 16px;
    font-weight: 500;
    color: var(--color-text);
}

.details-column p {
    font-size: 16px;
    line-height: 1.7;
    margin-bottom: 24px;
}

.project-links-detail {
    display: flex;
    gap: 24px;
    margin-top: 40px;
    flex-wrap: wrap;
}

.project-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--color-text);
    text-decoration: none;
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 0.5px;
    border-bottom: 2px solid var(--color-accent);
    padding-bottom: 4px;
    transition: color 0.3s ease;
}

.project-link:hover {
    color: var(--color-accent);
}

/* CTA Section */
.cta-section {
    padding: 120px 108px;
    text-align: center;
    border-top: 1px solid #333;
}

.cta-section h2 {
    font-family: var(--font-heading);
    font-size: 64px;
    letter-spacing: -0.64px;
    margin-bottom: 40px;
}

.btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background-color: var(--color-accent);
    color: var(--color-bg);
    padding: 16px 32px;
    border-radius: 27px;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    letter-spacing: 0.5px;
    transition: transform 0.3s ease, background-color 0.3s ease;
}

.btn-primary:hover {
    background-color: #c5db6f;
    transform: translateY(-2px);
}

/* Responsive Design */
@media (max-width: 1024px) {
    .navigation {
        padding: 24px 32px;
    }

    .project-header {
        padding: 60px 32px 40px;
    }

    .project-hero {
        padding: 0 32px 60px;
    }

    .project-details {
        padding: 60px 32px;
    }

    .details-grid {
        grid-template-columns: 1fr;
        gap: 60px;
    }

    .cta-section {
        padding: 80px 32px;
    }
}

@media (max-width: 768px) {
    .navigation {
        padding: 20px 16px;
    }

    .logo {
        font-size: 28px;
    }

    .nav-links {
        position: fixed;
        top: 76px;
        right: -100%;
        width: 100%;
        height: calc(100vh - 76px);
        background-color: var(--color-bg);
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        padding: 40px 0;
        transition: right 0.3s ease;
        border-top: 1px solid #333;
    }

    .nav-links.active {
        right: 0;
    }

    .nav-links a {
        font-size: 24px;
    }

    .mobile-menu-toggle {
        display: flex;
    }

    .mobile-menu-toggle.active span:first-child {
        transform: rotate(45deg) translate(8px, 8px);
    }

    .mobile-menu-toggle.active span:last-child {
        transform: rotate(-45deg) translate(8px, -8px);
    }

    .project-header {
        padding: 40px 16px 32px;
    }

    .project-header h1 {
        font-size: 48px;
    }

    .project-description {
        font-size: 16px;
    }

    .project-hero {
        padding: 0 16px 40px;
    }

    .project-hero-image {
        height: 400px;
    }

    .project-details {
        padding: 40px 16px;
    }

    .details-grid {
        gap: 40px;
    }

    .details-column h2 {
        font-size: 24px;
    }

    .cta-section {
        padding: 60px 16px;
    }

    .cta-section h2 {
        font-size: 40px;
    }
}
</style>
