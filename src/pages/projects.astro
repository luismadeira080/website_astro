@media (max-width: 768px) {
    .navigation {
        padding: 20px 16px;
    }

    .logo {
        font-size: 28px;
    }

    .nav-links {
        position: fixed;
        top: 76px;
        right: -100%;
        width: 100%;
        height: calc(100vh - 76px);
        background-color: var(--color-bg);
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        padding: 40px 0;
