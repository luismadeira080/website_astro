<style>
/* Reset & Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --color-bg: #0d0d0d;
    --color-text: #c7c7c7;
    --color-accent: #d3e97a;
    --color-dark: #1a1a1a;
    --font-primary: 'Inter', sans-serif;
    --font-heading: 'Bebas Neue', sans-serif;
}

body {
    font-family: var(--font-primary);
    background-color: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
    overflow-x: hidden;
}

/* Navigation */
.navigation {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px 60px;
    position: sticky;
    top: 0;
    background-color: var(--color-bg);
    z-index: 1000;
    transition: transform 0.3s ease;
}

.logo {
    font-family: var(--font-heading);
    font-size: 32px;
    letter-spacing: -0.32px;
    color: var(--color-text);
    text-decoration: none;
}

.nav-links {
    display: flex;
    gap: 32px;
}

.nav-links a {
    color: var(--color-text);
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
    letter-spacing: -0.48px;
    transition: color 0.3s ease;
}

.nav-links a:hover {
    color: var(--color-accent);
}

.mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 8px;
    cursor: pointer;
}

.mobile-menu-toggle span {
    width: 32px;
    height: 2px;
    background-color: var(--color-text);
    transition: all 0.3s ease;
}

/* Projects Hero */
.projects-hero {
    padding: 120px 108px 80px;
    text-align: center;
}

.projects-hero h1 {
    font-family: var(--font-heading);
    font-size: 88px;
    letter-spacing: -0.88px;
    margin-bottom: 24px;
}

.projects-hero p {
    font-size: 20px;
    color: var(--color-text);
    opacity: 0.8;
}

/* All Case Studies */
.all-case-studies {
    padding: 40px 108px 80px;
    display: flex;
    flex-direction: column;
    gap: 120px;
}

.project-showcase {
    display: flex;
    gap: 48px;
    align-items: center;
}

.project-reverse {
    flex-direction: row-reverse;
}

.project-image-card {
    width: 600px;
    height: 600px;
    background-color: var(--color-dark);
    border-radius: 12px;
    overflow: hidden;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.project-image-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.project-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 48px;
}

.project-information {
    display: flex;
    flex-direction: column;
    gap: 32px;
}

.project-title-description {
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.project-title-description h3 {
    font-size: 32px;
    font-weight: 500;
    line-height: 1.4;
    color: var(--color-text);
}

.project-title-description p {
    font-size: 18px;
    line-height: 1.5;
    color: var(--color-text);
}

.project-info-table {
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.project-info-table h4 {
    font-size: 16px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--color-text);
}

.info-list {
    display: flex;
    flex-direction: column;
    border-bottom: 1px solid #484848;
}

.info-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 0;
    border-top: 1px solid #484848;
}

.info-label {
    font-size: 16px;
    font-weight: 500;
    color: var(--color-text);
}

.info-value {
    font-size: 16px;
    font-weight: 500;
    color: var(--color-text);
}

.project-links-wrapper {
    display: flex;
    gap: 24px;
    flex-wrap: wrap;
}

.project-link-underline {
    display: inline-flex;
    flex-direction: column;
    gap: 4px;
    text-decoration: none;
    color: var(--color-accent);
    transition: opacity 0.3s ease;
}

.project-link-underline:hover {
    opacity: 0.8;
}

.project-link-underline > div:first-child,
.project-link-underline > span:first-child {
    display: flex;
    align-items: center;
    gap: 4px;
}

.project-link-underline span {
    font-size: 16px;
    font-weight: 700;
    text-transform: uppercase;
    line-height: 1.5;
}

.project-link-underline svg {
    width: 24px;
    height: 24px;
    fill: currentColor;
}

.project-link-underline::after {
    content: '';
    height: 2px;
    background-color: var(--color-accent);
    width: 100%;
}

.btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background-color: var(--color-accent);
    color: var(--color-bg);
    padding: 16px 32px;
    border-radius: 27px;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    letter-spacing: 0.5px;
    transition: transform 0.3s ease, background-color 0.3s ease;
}

.btn-primary:hover {
    background-color: #c5db6f;
    transform: translateY(-2px);
}

/* CTA Section */
.cta-section {
    padding: 80px 108px;
    text-align: center;
    border-top: 1px solid #333;
}

.cta-section h2 {
    font-family: var(--font-heading);
    font-size: 64px;
    letter-spacing: -0.64px;
    margin-bottom: 24px;
}

.cta-section p {
    font-size: 18px;
    margin-bottom: 32px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

/* Responsive Design */
@media (max-width: 1024px) {
    .navigation {
        padding: 24px 32px;
    }

    .projects-hero {
        padding: 80px 32px 60px;
    }

    .all-case-studies {
        padding: 40px 32px 60px;
    }

    .case-study-body {
        grid-template-columns: 1fr;
        gap: 32px;
    }

    .cta-section {
        padding: 60px 32px;
    }
}

@media (max-width: 768px) {
    .navigation {
        padding: 20px 16px;
    }

    .logo {
        font-size: 28px;
    }

    .nav-links {
        position: fixed;
        top: 76px;
        right: -100%;
        width: 100%;
        height: calc(100vh - 76px);
        background-color: var(--color-bg);
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        padding: 40px 0;
        transition: right 0.3s ease;
        border-top: 1px solid #333;
    }

    .nav-links.active {
        right: 0;
    }

    .nav-links a {
        font-size: 24px;
    }

    .mobile-menu-toggle {
        display: flex;
    }

    .mobile-menu-toggle.active span:first-child {
        transform: rotate(45deg) translate(8px, 8px);
    }

    .mobile-menu-toggle.active span:last-child {
        transform: rotate(-45deg) translate(8px, -8px);
    }

    .projects-hero {
        padding: 60px 16px 40px;
    }

    .projects-hero h1 {
        font-size: 57px;
    }

    .all-case-studies {
        padding: 32px 16px 40px;
    }

    .case-study {
        padding: 32px 24px;
    }

    .case-study-header h3 {
        font-size: 28px;
    }

    .cta-section {
        padding: 40px 16px;
    }

    .cta-section h2 {
        font-size: 48px;
    }
}
</style>
