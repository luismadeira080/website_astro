    margin-bottom: 24px;
    opacity: 0.9;
}

/* Services Grid */
.services-grid-section {
    padding: 80px 108px;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px;
    border-top: 1px solid #333;
}

.service-card {
    background-color: var(--color-dark);
    border: 1px solid #333;
