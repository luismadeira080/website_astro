<style>
/* Reset & Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --color-bg: #0d0d0d;
    --color-text: #c7c7c7;
    --color-accent: #d3e97a;
    --color-dark: #1a1a1a;
    --font-primary: 'Inter', sans-serif;
    --font-heading: 'Bebas Neue', sans-serif;
}

body {
    font-family: var(--font-primary);
    background-color: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
    overflow-x: hidden;
}

/* Navigation */
.navigation {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px 60px;
    position: sticky;
    top: 0;
    background-color: var(--color-bg);
    z-index: 1000;
}

.logo {
    font-family: var(--font-heading);
    font-size: 32px;
    letter-spacing: -0.32px;
    color: var(--color-text);
    text-decoration: none;
}

.nav-links {
    display: flex;
    gap: 32px;
}

.nav-links a {
    color: var(--color-text);
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
    letter-spacing: -0.48px;
    transition: color 0.3s ease;
}

.nav-links a:hover {
    color: var(--color-accent);
}

.mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 8px;
    cursor: pointer;
}

.mobile-menu-toggle span {
    width: 32px;
    height: 2px;
    background-color: var(--color-text);
    transition: all 0.3s ease;
}

/* About Hero Section */
.about-hero {
    padding: 80px 108px 60px;
}

.about-hero h1 {
    font-family: var(--font-heading);
    font-size: 91px;
    letter-spacing: -0.91px;
    margin-bottom: 60px;
}

.about-intro-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 72px;
}

.about-intro-content h2 {
    font-size: 45px;
    line-height: 1.2;
    color: var(--color-text);
}

.about-description p {
    font-size: 16px;
    line-height: 1.7;
    margin-bottom: 32px;
}

.about-actions {
    display: flex;
    align-items: center;
    gap: 16px;
}

.btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background-color: var(--color-accent);
    color: var(--color-bg);
    padding: 16px 32px;
    border-radius: 27px;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    letter-spacing: 0.5px;
    transition: transform 0.3s ease, background-color 0.3s ease;
}

.btn-primary:hover {
    background-color: #c5db6f;
    transform: translateY(-2px);
}

.social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 54px;
    height: 54px;
    border: 1px solid var(--color-text);
    border-radius: 50%;
    color: var(--color-text);
    transition: all 0.3s ease;
}

.social-icon:hover {
    background-color: var(--color-accent);
    border-color: var(--color-accent);
    color: var(--color-bg);
}

/* Profile Section */
.profile-section {
    padding: 0 108px 80px;
}

.profile-image {
    width: 100%;
    max-width: 1200px;
    height: 600px;
    background-color: var(--color-text);
    border-radius: 16px;
    overflow: hidden;
}

.profile-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
}

/* Capabilities Section */
.capabilities-section {
    padding: 80px 108px;
    border-top: 1px solid #333;
}

.capabilities-section h2 {
    font-family: var(--font-heading);
    font-size: 76px;
    letter-spacing: -0.76px;
    margin-bottom: 48px;
}

.capabilities-content {
    display: grid;
