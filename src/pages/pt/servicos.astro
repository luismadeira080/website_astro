}

/* Process Section */
.process-section {
    padding: 80px 108px;
    border-top: 1px solid #333;
}

.process-section h2 {
    font-family: var(--font-heading);
    font-size: 64px;
    letter-spacing: -0.64px;
    margin-bottom: 48px;
    text-align: center;
}

.process-steps {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 32px;
}

.step {
    display: flex;
    flex-direction: column;
