    display: grid;
    grid-template-columns: 80px 1fr;
    gap: 32px;
    align-items: start;
}

.step-number {
    font-family: var(--font-heading);
    font-size: 48px;
    color: var(--color-accent);
    opacity: 0.3;
}

.process-step h3 {
    margin: 0 0 16px 0;
    color: var(--color-text);
}

.process-step p {
    margin: 0;
    opacity: 0.85;
}

/* Results Grid */
.results-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 32px;
    margin-top: 48px;
}

.result-card {
    background-color: rgba(211, 233, 122, 0.05);
