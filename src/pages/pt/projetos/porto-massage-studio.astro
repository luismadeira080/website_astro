    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 32px;
    margin-top: 48px;
    padding: 40px;
    background-color: var(--color-dark);
    border-radius: 12px;
}

.info-item h3 {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    opacity: 0.6;
    margin: 0 0 8px 0;
}

.info-item p {
    font-size: 18px;
    font-weight: 600;
    margin: 0;
    opacity: 1;
}

/* Challenge List */
.challenge-list {
    list-style: none;
    padding: 0;
    margin: 32px 0;
}

.challenge-list li {
    padding: 20px;
    background-color: rgba(211, 233, 122, 0.05);
    border-left: 3px solid var(--color-accent);
    margin-bottom: 16px;
    border-radius: 4px;
}

/* Solution List */
.solution-list {
    list-style: none;
    padding: 0;
    margin: 32px 0;
}

.solution-list li {
    padding: 20px;
    background-color: rgba(211, 233, 122, 0.05);
    border-left: 3px solid var(--color-accent);
    margin-bottom: 16px;
    border-radius: 4px;
}

/* Features Grid */
.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
    margin-top: 32px;
}

.feature-card {
    background-color: rgba(255, 255, 255, 0.02);
    border: 1px solid #333;
    border-radius: 12px;
    padding: 32px;
    transition: transform 0.3s ease, border-color 0.3s ease;
}

.feature-card:hover {
    transform: translateY(-4px);
    border-color: var(--color-accent);
}

.feature-card h4 {
    color: var(--color-accent);
    margin-bottom: 16px;
}

.feature-card p {
    font-size: 16px;
    margin: 0;
    opacity: 0.85;
}

/* Process Timeline */
