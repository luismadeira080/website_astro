---
import SEO from '../../components/SEO.astro';
import Schema from '../../components/Schema.astro';
import LanguageSwitcher from '../../components/LanguageSwitcher.astro';
import Footer from '../../components/Footer.astro';
import ConversionTracking from '../../components/ConversionTracking.astro';
---

<!DOCTYPE html>
<html lang="pt">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	<SEO
		title="Landing Page Profissional desde €250 | Estúdio LM"
		description="Landing page profissional com entrega em 7 dias e acompanhamento contínuo incluído. Design responsivo, formulário de contacto, SEO básico e analytics. Sem custos mensais."
		locale="pt"
	/>
	<Schema type="Service" />
</head>
<body>
	<!-- Navigation -->
	<nav class="navigation">
		<a href="/pt" class="logo">luís madeira</a>
		<div class="nav-links">
			<a href="/pt/#work">Trabalhos</a>
			<a href="/pt/servicos">Serviços</a>
			<a href="/pt/sobre">Sobre</a>
			<a href="/pt/#contact">Contacto</a>
			<LanguageSwitcher currentPath="/pt/landing-page" />
		</div>
		<div class="mobile-menu-toggle">
			<span></span>
			<span></span>
		</div>
	</nav>

	<!-- Hero Section -->
	<section class="hero">
		<div class="hero-container">
			<div class="hero-content">
				<h1>Landing Page Profissional Desde €250</h1>
