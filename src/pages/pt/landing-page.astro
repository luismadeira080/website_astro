---
import SEO from '../../components/SEO.astro';
import Schema from '../../components/Schema.astro';
import LanguageSwitcher from '../../components/LanguageSwitcher.astro';
import Footer from '../../components/Footer.astro';
import ConversionTracking from '../../components/ConversionTracking.astro';
import ContactModal from '../../components/ContactModal.astro';
---

<!DOCTYPE html>
<html lang="pt">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	<SEO
		title="Landing Page Profissional desde €350 | Estúdio LM"
		description="Landing page profissional com entrega em 7 dias. Design responsivo, formulário de contacto, SEO básico e analytics incluídos. Sem custos mensais."
		locale="pt"
	/>
	<Schema type="Service" />
</head>
<body>
	<!-- Navigation -->
	<nav class="navigation">
		<a href="/pt" class="logo">
			<span class="logo-text">Estúdio LM</span>
		</a>
		<div class="nav-links">
			<a href="/pt">Início</a>
			<a href="/pt/servicos">Serviços</a>
			<a href="/pt/trabalho">Trabalho</a>
			<button class="nav-link-button" data-contact-trigger data-contact-context="landing">Contacto</button>
			<LanguageSwitcher currentLocale="pt" currentPath="/pt/landing-page" />
		</div>
		<button class="menu-toggle" aria-label="Abrir menu">
			<span></span>
			<span></span>
			<span></span>
		</button>
	</nav>

	<!-- Mobile Menu -->
	<div class="mobile-menu">
		<div class="mobile-menu-content">
			<a href="/pt" class="menu-link">Início</a>
			<a href="/pt/servicos" class="menu-link">Serviços</a>
			<a href="/pt/trabalho" class="menu-link">Trabalho</a>
			<button class="menu-link" data-contact-trigger data-contact-context="landing">Contacto</button>
		</div>
	</div>

	<!-- Hero Section -->
	<section class="hero">
		<div class="hero-container">
			<div class="hero-content">
				<h1>Landing Page Profissional Desde €350</h1>
				<p class="hero-subtitle">Entrega em 7 Dias | Design Responsivo | SEO Básico</p>

				<div class="hero-split">
					<div class="trust-bullets">
						<div class="bullet">
							<svg class="check-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
							<span>Design responsivo para todos os dispositivos</span>
						</div>
						<div class="bullet">
							<svg class="check-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
							<span>Formulário de contacto + integração WhatsApp</span>
						</div>
						<div class="bullet">
							<svg class="check-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
							<span>SEO básico e Google Analytics incluídos</span>
						</div>
						<div class="bullet">
							<svg class="check-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
							<span>Pagamento único, sem custos mensais</span>
						</div>
					</div>

					<div class="hero-form">
						<form id="landing-page-form" action="https://formspree.io/f/manpdppz" method="POST">
							<input type="hidden" name="service" value="Landing Page - €350">
							<input type="hidden" name="_subject" value="Novo pedido: Landing Page €350">

							<div class="form-group">
								<label for="name">Nome</label>
								<input type="text" id="name" name="name" placeholder="O seu nome" required>
							</div>

							<div class="form-group">
								<label for="email">Email</label>
								<input type="email" id="email" name="email" placeholder="email@exemplo.pt" required>
							</div>

							<div class="form-group">
								<label for="phone">Telefone</label>
								<input type="tel" id="phone" name="phone" placeholder="+351 912 345 678" required>
							</div>

							<div class="form-group">
								<label for="business">Tipo de Negócio</label>
								<input type="text" id="business" name="business" placeholder="Ex: Clínica, Restaurante, etc." required>
							</div>

							<button type="submit" class="btn-submit cta-primary" data-service="landing-page" aria-label="Pedir orçamento">
								PEDIR ORÇAMENTO
							</button>
						</form>
						<div id="form-success" class="form-success" style="display: none;">
							<div class="success-icon">✓</div>
							<h3>Pedido Enviado!</h3>
							<p>Entraremos em contacto em breve.</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- What's Included Section -->
	<section class="section included-section">
		<div class="section-container">
			<h2>O Que Está Incluído</h2>
			<div class="included-grid">
				<div class="included-item">
					<div class="icon">
						<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<rect x="3" y="3" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2"/>
							<path d="M3 9H21" stroke="currentColor" stroke-width="2"/>
							<path d="M9 3V21" stroke="currentColor" stroke-width="2"/>
						</svg>
					</div>
					<h3>Design Responsivo</h3>
					<p>Perfeito em desktop, tablet e mobile</p>
				</div>

				<div class="included-item">
					<div class="icon">
						<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M21 15C21 15.5304 20.7893 16.0391 20.4142 16.4142C20.0391 16.7893 19.5304 17 19 17H7L3 21V5C3 4.46957 3.21071 3.96086 3.58579 3.58579C3.96086 3.21071 4.46957 3 5 3H19C19.5304 3 20.0391 3.21071 20.4142 3.58579C20.7893 3.96086 21 4.46957 21 5V15Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</div>
					<h3>Formulário + WhatsApp</h3>
					<p>Capture leads e receba no email</p>
				</div>

				<div class="included-item">
					<div class="icon">
						<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2"/>
							<path d="M21 21L16.65 16.65" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
						</svg>
					</div>
					<h3>SEO Básico</h3>
					<p>Otimização para aparecer no Google</p>
				</div>

				<div class="included-item">
					<div class="icon">
						<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M3 3V21H21" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
							<path d="M7 16L12 11L16 15L21 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</div>
					<h3>Google Analytics</h3>
					<p>Acompanhe visitas e conversões</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Social Proof Section -->
	<section class="section proof-section">
		<div class="section-container">
			<h2>Resultados Reais</h2>
			<div class="case-study-card">
				<div class="case-image-placeholder">
					<img src="/placeholder-case.jpg" alt="Caso de estudo" loading="lazy" onerror="this.style.background='linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%)'">
				</div>
				<div class="case-content">
					<h3>Elite Detailing Lisboa</h3>
					<div class="metric">+85% Conversões em 30 Dias</div>
					<blockquote>"A nova landing page triplicou os pedidos de orçamento. Simples, rápida e eficaz."</blockquote>
				</div>
			</div>
		</div>
	</section>

	<!-- Pricing Section -->
	<section class="section pricing-section">
		<div class="section-container">
			<div class="pricing-box">
				<div class="price">€350</div>
				<div class="price-subtitle">Pagamento Único</div>
				<div class="no-monthly">Sem custos mensais. É seu para sempre.</div>
				<button class="btn-primary cta-primary" data-contact-trigger data-contact-context="landing" data-service="landing-page" aria-label="Começar agora">
					COMEÇAR AGORA
				</button>
			</div>
		</div>
	</section>

	<!-- FAQ Section -->
	<section class="section faq-section">
		<div class="section-container">
			<h2>Perguntas Frequentes</h2>
			<div class="faq-list">
				<div class="faq-item">
					<button class="faq-question" aria-expanded="false">
						<span>Quanto tempo demora?</span>
						<svg class="faq-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M19 9L12 16L5 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</button>
					<div class="faq-answer">
						<p>7 dias úteis desde a aprovação do conteúdo e imagens. Normalmente entregamos ainda mais rápido.</p>
					</div>
				</div>

				<div class="faq-item">
					<button class="faq-question" aria-expanded="false">
						<span>Posso alterar depois?</span>
						<svg class="faq-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M19 9L12 16L5 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</button>
					<div class="faq-answer">
						<p>Sim. Incluímos 1 mês de alterações gratuitas após entrega. Depois disso, oferecemos planos de manutenção desde €50/mês.</p>
					</div>
				</div>

				<div class="faq-item">
					<button class="faq-question" aria-expanded="false">
						<span>O que está incluído exatamente?</span>
						<svg class="faq-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M19 9L12 16L5 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</button>
					<div class="faq-answer">
						<p>Design responsivo completo, formulário de contacto, integração WhatsApp, SEO básico (meta tags, título, descrição), Google Analytics, e hospedagem grátis no primeiro ano.</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Footer CTA -->
	<section class="section footer-cta">
		<div class="section-container">
			<h2>Pronto Para Começar?</h2>
			<p class="footer-cta-text">Landing page profissional em 7 dias. Apenas €350.</p>
			<button class="btn-primary cta-primary" data-contact-trigger data-contact-context="landing" data-service="landing-page" aria-label="Pedir orçamento agora">
				PEDIR ORÇAMENTO
			</button>
			<div class="contact-info">
				<a href="tel:+351912345678" class="contact-link" aria-label="Ligar agora">
					<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M22 16.92V19.92C22 20.49 21.54 20.95 20.97 20.92C10.05 20.17 2.92 13.04 2.08 2.03C2.05 1.46 2.51 1 3.08 1H6.08C6.65 1 7.11 1.46 7.14 2.03C7.26 3.92 7.62 5.75 8.2 7.47C8.33 7.84 8.23 8.26 7.93 8.56L6.21 10.28C7.87 13.37 10.63 16.13 13.72 17.79L15.44 16.07C15.74 15.77 16.16 15.67 16.53 15.8C18.25 16.38 20.08 16.74 21.97 16.86C22.54 16.89 23 17.35 23 17.92H22Z" stroke="currentColor" stroke-width="2"/>
					</svg>
					+351 912 345 678
				</a>
				<a href="https://wa.me/351912345678" target="_blank" rel="noopener noreferrer" class="contact-link" aria-label="Contactar via WhatsApp">
					<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M17.472 14.382C17.145 14.219 15.565 13.443 15.269 13.341C14.973 13.239 14.757 13.188 14.541 13.515C14.325 13.842 13.712 14.382 13.527 14.598C13.342 14.814 13.157 14.844 12.83 14.681C12.503 14.518 11.462 14.183 10.245 13.097C9.292 12.249 8.646 11.201 8.461 10.874C8.276 10.547 8.441 10.376 8.604 10.213C8.751 10.066 8.931 9.831 9.094 9.646C9.257 9.461 9.308 9.306 9.41 9.09C9.512 8.874 9.461 8.689 9.38 8.526C9.308 8.363 8.646 6.783 8.38 6.129C8.114 5.475 7.848 5.586 7.647 5.586C7.446 5.586 7.23 5.556 7.014 5.556C6.798 5.556 6.441 5.637 6.145 5.964C5.849 6.291 5.013 7.067 5.013 8.647C5.013 10.227 6.175 11.747 6.338 11.963C6.501 12.179 8.646 15.448 11.932 16.818C15.218 18.188 15.218 17.741 15.884 17.681C16.55 17.621 17.88 16.878 18.146 16.105C18.412 15.332 18.412 14.679 18.331 14.528C18.25 14.377 18.004 14.296 17.677 14.133L17.472 14.382ZM12.045 21.785H12.042C10.241 21.785 8.477 21.279 6.942 20.327L6.597 20.118L3.12 21.054L4.073 17.66L3.841 17.3C2.792 15.707 2.238 13.853 2.238 11.937C2.238 6.488 6.596 2.13 12.045 2.13C14.689 2.13 17.166 3.162 19.029 5.025C20.892 6.888 21.924 9.365 21.924 12.009C21.924 17.458 17.566 21.816 12.117 21.816L12.045 21.785Z" stroke="currentColor" stroke-width="1.5"/>
					</svg>
					WhatsApp
				</a>
				<a href="mailto:info@estudiolm.com" class="contact-link" aria-label="Enviar email">
					<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
						<rect x="3" y="5" width="18" height="14" rx="2" stroke="currentColor" stroke-width="2"/>
						<path d="M3 7L12 13L21 7" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
					</svg>
					info@estudiolm.com
				</a>
			</div>
		</div>
	</section>

	<Footer locale="pt" />
	<ConversionTracking />
	<ContactModal locale="pt" context="landing" />

	<style>
		:root {
			--color-bg: #0d0d0d;
			--color-text: #c7c7c7;
			--color-accent: #d3e97a;
			--color-dark: #1a1a1a;
			--color-border: #333;
			--font-primary: 'Inter', sans-serif;
			--font-heading: 'Bebas Neue', sans-serif;
		}

		* {
			margin: 0;
			padding: 0;
			box-sizing: border-box;
		}

		body {
			font-family: var(--font-primary);
			background-color: var(--color-bg);
			color: var(--color-text);
			line-height: 1.6;
			overflow-x: hidden;
		}

		/* Navigation */
		.navigation {
			display: flex;
			justify-content: space-between;
			align-items: center;
			padding: 24px 108px;
			position: sticky;
			top: 0;
			background-color: var(--color-bg);
			z-index: 1000;
			border-bottom: 1px solid var(--color-border);
		}

		.logo {
			text-decoration: none;
			color: var(--color-text);
		}

		.logo-text {
			font-family: var(--font-heading);
			font-size: 24px;
			letter-spacing: 1px;
		}

		.nav-right {
			display: flex;
			align-items: center;
			gap: 24px;
		}

		.menu-toggle {
			display: none;
			flex-direction: column;
			gap: 6px;
			background: none;
			border: none;
			cursor: pointer;
			padding: 8px;
		}

		.menu-toggle span {
			width: 24px;
			height: 2px;
			background-color: var(--color-accent);
			transition: 0.3s ease;
		}

		.mobile-menu {
			display: none;
			position: fixed;
			top: 73px;
			left: 0;
			width: 100%;
			height: calc(100vh - 73px);
			background-color: var(--color-bg);
			z-index: 999;
			transform: translateX(-100%);
			transition: transform 0.3s ease;
		}

		.mobile-menu.active {
			transform: translateX(0);
		}

		.mobile-menu-content {
			display: flex;
			flex-direction: column;
			padding: 40px 32px;
			gap: 24px;
		}

		.menu-link {
			font-size: 24px;
			color: var(--color-text);
			text-decoration: none;
			font-family: var(--font-heading);
			letter-spacing: 0.5px;
			background: none;
			border: none;
			text-align: left;
			cursor: pointer;
			transition: color 0.3s ease;
		}

		.menu-link:hover {
			color: var(--color-accent);
		}

		/* Hero Section */
		.hero {
			min-height: 100vh;
			display: flex;
			align-items: center;
			padding: 80px 108px;
		}

		.hero-container {
			width: 100%;
			max-width: 1400px;
			margin: 0 auto;
		}

		.hero h1 {
			font-family: var(--font-heading);
			font-size: 88px;
			line-height: 1.1;
			letter-spacing: -0.88px;
			color: var(--color-accent);
			margin-bottom: 16px;
		}

		.hero-subtitle {
			font-size: 18px;
			color: var(--color-text);
			opacity: 0.9;
			margin-bottom: 48px;
		}

		.hero-split {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 64px;
			margin-top: 48px;
		}

		.trust-bullets {
			display: flex;
			flex-direction: column;
			gap: 24px;
		}

		.bullet {
			display: flex;
			align-items: flex-start;
			gap: 16px;
		}

		.check-icon {
			width: 24px;
			height: 24px;
			color: var(--color-accent);
			flex-shrink: 0;
			margin-top: 2px;
		}

		.bullet span {
			font-size: 16px;
			line-height: 1.6;
		}

		/* Form Styling */
		.hero-form {
			background-color: var(--color-dark);
			border: 1px solid var(--color-border);
			border-radius: 16px;
			padding: 40px;
		}

		.form-group {
			margin-bottom: 24px;
		}

		.form-group label {
			display: block;
			font-size: 13px;
			text-transform: uppercase;
			letter-spacing: 0.5px;
			margin-bottom: 8px;
			color: var(--color-accent);
		}

		.form-group input {
			width: 100%;
			background-color: transparent;
			border: none;
			border-bottom: 1px solid var(--color-border);
			padding: 16px 0;
			font-size: 16px;
			color: var(--color-text);
			font-family: var(--font-primary);
			transition: border-color 0.3s ease;
		}

		.form-group input:focus {
			outline: none;
			border-bottom-color: var(--color-accent);
		}

		.form-group input::placeholder {
			color: var(--color-text);
			opacity: 0.5;
		}

		.btn-submit {
			width: 100%;
			background-color: var(--color-accent);
			color: var(--color-bg);
			padding: 16px 32px;
			border: none;
			border-radius: 27px;
			font-weight: 600;
			font-size: 14px;
			letter-spacing: 0.5px;
			cursor: pointer;
			transition: transform 0.3s ease, background-color 0.3s ease;
			margin-top: 8px;
		}

		.btn-submit:hover {
			background-color: #c5db6f;
			transform: translateY(-2px);
		}

		.form-success {
			text-align: center;
			padding: 40px 20px;
		}

		.success-icon {
			width: 64px;
			height: 64px;
			background-color: var(--color-accent);
			color: var(--color-bg);
			border-radius: 50%;
			display: flex;
			align-items: center;
			justify-content: center;
			font-size: 32px;
			font-weight: bold;
			margin: 0 auto 24px;
		}

		.form-success h3 {
			font-family: var(--font-heading);
			font-size: 32px;
			color: var(--color-accent);
			margin-bottom: 8px;
		}

		.form-success p {
			font-size: 16px;
			color: var(--color-text);
			opacity: 0.8;
		}

		/* Sections */
		.section {
			border-top: 1px solid var(--color-border);
			padding: 80px 108px;
		}

		.section-container {
			max-width: 1400px;
			margin: 0 auto;
		}

		.section h2 {
			font-family: var(--font-heading);
			font-size: 64px;
			letter-spacing: -0.64px;
			color: var(--color-accent);
			margin-bottom: 48px;
		}

		/* Included Section */
		.included-grid {
			display: grid;
			grid-template-columns: repeat(2, 1fr);
			gap: 40px;
		}

		.included-item {
			display: flex;
			flex-direction: column;
			gap: 16px;
		}

		.included-item .icon {
			width: 48px;
			height: 48px;
			color: var(--color-accent);
		}

