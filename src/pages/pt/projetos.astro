---
import SEO from '../../components/SEO.astro';
import Schema from '../../components/Schema.astro';
import LanguageSwitcher from '../../components/LanguageSwitcher.astro';
import Footer from '../../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="data:,">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- SEO Meta Tags -->
    <SEO
        title="Casos de Estudo - Resultados Reais em SEO | Luís Madeira"
        description="Veja resultados reais de projetos de SEO local e desenvolvimento web. Casos de estudo com métricas, estratégia e detalhes de implementação de negócios portugueses."
        locale="pt"
    />

    <!-- Structured Data -->
    <Schema type="Organization" />
</head>
<body>
    <!-- Navigation -->
    <nav class="navigation">
        <a href="/" class="logo">luís madeira</a>
        <div class="nav-links">
            <a href="/pt/#work">Trabalhos</a>
            <a href="/pt/servicos">Serviços</a>
            <a href="/pt/sobre">Sobre</a>
            <a href="/pt/#contact">Contacto</a>
            <LanguageSwitcher currentPath="/pt/projetos" />
        </div>
        <div class="mobile-menu-toggle">
            <span></span>
            <span></span>
        </div>
    </nav>

    <!-- Projects Hero -->
    <section class="projects-hero">
        <h1>CASOS DE ESTUDO</h1>
        <p>Resultados reais de projetos de SEO local e desenvolvimento web</p>
    </section>

    <!-- Projects Grid -->
    <section class="projects-grid-section">
        <!-- Project Card 1 -->
        <div class="project-card">
            <div class="project-card-image">
                <img src="/final fnal final.svg" alt="Porto Car Care - Auto detailing website with local SEO optimization">
            </div>
            <div class="project-card-content">
                <div class="project-card-tag">Local SEO</div>
                <h3>Porto Car Care</h3>
                <p class="project-card-description">Triplicámos a visibilidade orgânica de uma oficina de estética automóvel através de uma estratégia de SEO programático.</p>
                <div class="project-card-metrics">
                    <div class="metric-item">
                        <span class="metric-number">+3×</span>
                        <span class="metric-text">Visibilidade</span>
                    </div>
                    <div class="metric-item">
                        <span class="metric-number">+12</span>
                        <span class="metric-text">Posições</span>
                    </div>
                    <div class="metric-item">
                        <span class="metric-number">+40%</span>
                        <span class="metric-text">Chamadas</span>
                    </div>
                </div>
                <div class="project-card-actions">
                    <a href="/pt/projetos/porto-car-care" class="project-link">Ler Caso de Estudo Completo →</a>
                    <a href="/pt/#contact" class="card-cta">Pedir Projeto Semelhante</a>
                </div>
            </div>
        </div>

        <!-- Project Card 2 -->
        <div class="project-card">
            <div class="project-card-image">
                <img src="/brunno-rodrigues.svg" alt="Brunno Rodrigues - Personal training and physiotherapy website">
            </div>
            <div class="project-card-content">
                <div class="project-card-tag">Landing Page</div>
                <h3>Brunno Rodrigues</h3>
                <p class="project-card-description">Landing page profissional para fisioterapeuta com CTAs claros para marcação de sessões.</p>
                <div class="project-card-metrics">
                    <div class="metric-item">
                        <span class="metric-number">2 semanas</span>
                        <span class="metric-text">Prazo</span>
                    </div>
                    <div class="metric-item">
                        <span class="metric-number">Mobile</span>
                        <span class="metric-text">Otimizado</span>
                    </div>
                    <div class="metric-item">
                        <span class="metric-number">SEO</span>
                        <span class="metric-text">Pronto</span>
                    </div>
                </div>
                <div class="project-card-actions">
                    <a href="/pt/projetos/brunno-rodrigues" class="project-link">Ler Caso de Estudo Completo →</a>
                    <a href="/pt/#contact" class="card-cta">Criar Sua Landing Page</a>
                </div>
            </div>
        </div>

        <!-- Project Card 3 -->
        <div class="project-card">
            <div class="project-card-image">
                <img src="/porto-massage-studio.svg" alt="Porto Massage Studio - Spa and wellness center website">
            </div>
            <div class="project-card-content">
                <div class="project-card-tag">Landing Page</div>
                <h3>Porto Massage Studio</h3>
                <p class="project-card-description">Landing page profissional para estúdio de massagens com marcação online e apresentação clara de serviços.</p>
                <div class="project-card-metrics">
                    <div class="metric-item">
                        <span class="metric-number">2 semanas</span>
                        <span class="metric-text">Prazo</span>
                    </div>
                    <div class="metric-item">
                        <span class="metric-number">Mobile</span>
                        <span class="metric-text">Otimizado</span>
                    </div>
                    <div class="metric-item">
                        <span class="metric-number">SEO</span>
                        <span class="metric-text">Pronto</span>
                    </div>
                </div>
                <div class="project-card-actions">
                    <a href="/pt/projetos/porto-massage-studio" class="project-link">Ler Caso de Estudo Completo →</a>
                    <a href="/pt/#contact" class="card-cta">Criar Sua Landing Page</a>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
        <h2>Pronto para fazer crescer o seu negócio?</h2>
        <p>Vamos discutir como o SEO local e um website focado em conversões pode ajudá-lo a conseguir mais clientes.</p>
        <a href="/pt/#contact" class="btn-primary">Entre em contacto</a>
    </section>

    <script>
        // Mobile Menu Toggle
        const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
        const navLinks = document.querySelector('.nav-links');

        if (mobileMenuToggle) {
            mobileMenuToggle.addEventListener('click', () => {
                mobileMenuToggle.classList.toggle('active');
                navLinks.classList.toggle('active');
            });

            const links = navLinks.querySelectorAll('a');
            links.forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenuToggle.classList.remove('active');
                    navLinks.classList.remove('active');
                });
            });
        }
    </script>
    <Footer locale="pt" />
</body>
</html>

<style>
/* Reset & Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --color-bg: #0d0d0d;
    --color-text: #c7c7c7;
    --color-accent: #d3e97a;
    --color-dark: #1a1a1a;
    --font-primary: 'Inter', sans-serif;
    --font-heading: 'Bebas Neue', sans-serif;
}

body {
    font-family: var(--font-primary);
    background-color: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
    overflow-x: hidden;
}

/* Navigation */
.navigation {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px 60px;
    position: sticky;
    top: 0;
    background-color: var(--color-bg);
    z-index: 1000;
    transition: transform 0.3s ease;
}

.logo {
    font-family: var(--font-heading);
    font-size: 32px;
    letter-spacing: -0.32px;
    color: var(--color-text);
    text-decoration: none;
}

.nav-links {
    display: flex;
    gap: 32px;
}

.nav-links a {
    color: var(--color-text);
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
    letter-spacing: -0.48px;
    transition: color 0.3s ease;
}

.nav-links a:hover {
    color: var(--color-accent);
}

.mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 8px;
    cursor: pointer;
}

.mobile-menu-toggle span {
    width: 32px;
    height: 2px;
    background-color: var(--color-text);
    transition: all 0.3s ease;
}

/* Projects Hero */
.projects-hero {
    padding: 120px 108px 80px;
    text-align: center;
}

.projects-hero h1 {
    font-family: var(--font-heading);
    font-size: 88px;
    letter-spacing: -0.88px;
    margin-bottom: 24px;
}

.projects-hero p {
    font-size: 20px;
    color: var(--color-text);
    opacity: 0.8;
}

/* Projects Grid */
.projects-grid-section {
    padding: 40px 108px 80px;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
    gap: 32px;
}

.project-card {
    background-color: var(--color-dark);
    border: 1px solid #333;
    border-radius: 16px;
    overflow: hidden;
    transition: transform 0.3s ease, border-color 0.3s ease;
    display: flex;
    flex-direction: column;
}

.project-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-4px);
}

.project-card-image {
    width: 100%;
    height: 280px;
    background-color: #0d0d0d;
    overflow: hidden;
}

.project-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.project-card:hover .project-card-image img {
    transform: scale(1.05);
}

.project-card-content {
    padding: 32px;
    display: flex;
    flex-direction: column;
    gap: 20px;
    flex: 1;
}

.project-card-tag {
    display: inline-block;
    background-color: rgba(211, 233, 122, 0.1);
    color: var(--color-accent);
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    width: fit-content;
}

.project-card h3 {
    font-size: 26px;
    font-weight: 600;
    line-height: 1.2;
    color: var(--color-text);
    margin: 0;
}

.project-card-description {
    font-size: 15px;
    line-height: 1.6;
    color: var(--color-text);
    opacity: 0.85;
}

.project-card-metrics {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
    padding: 20px 0;
    border-top: 1px solid #333;
    border-bottom: 1px solid #333;
}

.metric-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
    text-align: center;
}

.metric-number {
    font-family: var(--font-heading);
    font-size: 24px;
    color: var(--color-accent);
    line-height: 1;
}

.metric-text {
    font-size: 11px;
    color: var(--color-text);
    opacity: 0.7;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.project-card-actions {
    display: flex;
    gap: 16px;
    align-items: center;
    flex-wrap: wrap;
}

.project-link {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    letter-spacing: 0.5px;
    transition: opacity 0.3s ease;
}

.project-link:hover {
    opacity: 0.7;
}

.card-cta {
    display: inline-block;
    background-color: var(--color-accent);
    color: var(--color-bg);
    padding: 12px 24px;
    border-radius: 20px;
    text-decoration: none;
    font-weight: 600;
    font-size: 13px;
    letter-spacing: 0.5px;
    transition: transform 0.3s ease, background-color 0.3s ease;
    width: fit-content;
    text-transform: uppercase;
}

.card-cta:hover {
    background-color: #c5db6f;
    transform: translateY(-2px);
}

.btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background-color: var(--color-accent);
    color: var(--color-bg);
    padding: 16px 32px;
    border-radius: 27px;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    letter-spacing: 0.5px;
    transition: transform 0.3s ease, background-color 0.3s ease;
}

.btn-primary:hover {
    background-color: #c5db6f;
    transform: translateY(-2px);
}

/* CTA Section */
.cta-section {
    padding: 80px 108px;
    text-align: center;
    border-top: 1px solid #333;
}

.cta-section h2 {
    font-family: var(--font-heading);
    font-size: 64px;
    letter-spacing: -0.64px;
    margin-bottom: 24px;
}

.cta-section p {
    font-size: 18px;
    margin-bottom: 32px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

/* Responsive Design */
@media (max-width: 1024px) {
    .navigation {
        padding: 24px 32px;
    }

    .projects-hero {
        padding: 80px 32px 60px;
    }

    .projects-grid-section {
        padding: 40px 32px 60px;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 24px;
    }

    .project-card-image {
        height: 240px;
    }

    .cta-section {
        padding: 60px 32px;
    }
}

@media (max-width: 768px) {
    .navigation {
        padding: 20px 16px;
    }

    .logo {
        font-size: 28px;
    }

    .nav-links {
        position: fixed;
        top: 76px;
        right: -100%;
        width: 100%;
        height: calc(100vh - 76px);
        background-color: var(--color-bg);
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        padding: 40px 0;
        transition: right 0.3s ease;
        border-top: 1px solid #333;
    }

    .nav-links.active {
        right: 0;
    }

    .nav-links a {
        font-size: 24px;
    }

    .mobile-menu-toggle {
        display: flex;
    }

    .mobile-menu-toggle.active span:first-child {
        transform: rotate(45deg) translate(8px, 8px);
    }

    .mobile-menu-toggle.active span:last-child {
        transform: rotate(-45deg) translate(8px, -8px);
    }

    .projects-hero {
        padding: 60px 16px 40px;
    }

    .projects-hero h1 {
        font-size: 57px;
    }

    .projects-grid-section {
        padding: 32px 16px 40px;
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .project-card-image {
        height: 200px;
    }

    .project-card-content {
        padding: 24px;
        gap: 16px;
    }

    .project-card h3 {
        font-size: 22px;
    }

    .project-card-description {
        font-size: 14px;
    }

    .project-card-metrics {
        padding: 16px 0;
        gap: 12px;
    }

    .metric-number {
        font-size: 20px;
    }

    .metric-text {
        font-size: 10px;
    }

    .cta-section {
        padding: 40px 16px;
    }

    .cta-section h2 {
        font-size: 48px;
    }
}
</style>
