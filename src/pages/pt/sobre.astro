                    <label>Name</label>
                    <input type="text" placeholder="John Doe">
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" placeholder="">
                </div>
                <div class="form-group">
                    <label>Subject</label>
                    <input type="text" placeholder="">
                </div>
                <div class="form-group">
                    <label>Message</label>
                    <textarea rows="6" placeholder=""></textarea>
                </div>
                <button type="submit" class="btn-submit">SUBMIT</button>
            </form>
        </div>
