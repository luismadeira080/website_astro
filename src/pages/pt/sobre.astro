</html>

<style>
/* Reset & Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --color-bg: #0d0d0d;
    --color-text: #c7c7c7;
    --color-accent: #d3e97a;
    --color-dark: #1a1a1a;
    --font-primary: 'Inter', sans-serif;
    --font-heading: 'Bebas Neue', sans-serif;
}

body {
    font-family: var(--font-primary);
    background-color: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
    overflow-x: hidden;
}

/* Navigation */
.navigation {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px 60px;
    position: sticky;
    top: 0;
    background-color: var(--color-bg);
    z-index: 1000;
}

.logo {
    font-family: var(--font-heading);
    font-size: 32px;
    letter-spacing: -0.32px;
    color: var(--color-text);
    text-decoration: none;
}

.nav-links {
    display: flex;
    gap: 32px;
}

.nav-links a {
    color: var(--color-text);
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
    letter-spacing: -0.48px;
    transition: color 0.3s ease;
}

.nav-links a:hover {
    color: var(--color-accent);
}

.mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 8px;
    cursor: pointer;
}

.mobile-menu-toggle span {
    width: 32px;
    height: 2px;
    background-color: var(--color-text);
    transition: all 0.3s ease;
}

/* About Hero Section */
.about-hero {
    padding: 80px 108px 60px;
}

.about-hero h1 {
    font-family: var(--font-heading);
    font-size: 91px;
    letter-spacing: -0.91px;
    margin-bottom: 60px;
}

.about-intro-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 72px;
}

.about-intro-content h2 {
    font-size: 45px;
    line-height: 1.2;
    color: var(--color-text);
}

.about-description p {
    font-size: 16px;
    line-height: 1.7;
    margin-bottom: 32px;
}

.about-actions {
    display: flex;
    align-items: center;
    gap: 16px;
}

.btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background-color: var(--color-accent);
    color: var(--color-bg);
    padding: 16px 32px;
    border-radius: 27px;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    letter-spacing: 0.5px;
    transition: transform 0.3s ease, background-color 0.3s ease;
}

.btn-primary:hover {
    background-color: #c5db6f;
    transform: translateY(-2px);
}

.social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 54px;
    height: 54px;
    border: 1px solid var(--color-text);
    border-radius: 50%;
    color: var(--color-text);
    transition: all 0.3s ease;
}

.social-icon:hover {
    background-color: var(--color-accent);
    border-color: var(--color-accent);
    color: var(--color-bg);
}

/* Capabilities Section */
.capabilities-section {
    padding: 80px 108px;
    border-top: 1px solid #333;
}

.capabilities-section h2 {
    font-family: var(--font-heading);
    font-size: 76px;
    letter-spacing: -0.76px;
    margin-bottom: 48px;
}

.capabilities-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 72px;
}

.capabilities-content p {
    font-size: 16px;
    line-height: 1.7;
}

.skills-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
}

.skill-tag {
    display: inline-block;
    padding: 12px 24px;
    border: 1px solid var(--color-text);
    border-radius: 40px;
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
}

.skill-tag:hover {
    background-color: var(--color-accent);
    border-color: var(--color-accent);
    color: var(--color-bg);
}

/* Experience Section */
.experience-section {
    padding: 80px 108px;
    border-top: 1px solid #333;
}

.experience-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 72px;
}

.experience-section h2 {
    font-family: var(--font-heading);
    font-size: 76px;
    letter-spacing: -0.76px;
    line-height: 1;
}

.experience-timeline {
    display: flex;
    flex-direction: column;
    gap: 80px;
}

.experience-item {
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.experience-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 24px;
}

.experience-header h3 {
    font-size: 24px;
    font-weight: 500;
    margin-bottom: 8px;
    line-height: 1.3;
}

.company {
    font-size: 18px;
    font-weight: 600;
    color: var(--color-accent);
}

.timeline {
    font-size: 18px;
    color: var(--color-text);
    white-space: nowrap;
}

.experience-description {
    font-size: 18px;
    line-height: 1.5;
    color: var(--color-text);
}

/* Contact Section */
.contact-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
    padding: 80px 108px;
    border-top: 1px solid #333;
}

.contact-left h2 {
    font-family: var(--font-heading);
    font-size: 76px;
    letter-spacing: -0.76px;
    margin-bottom: 32px;
}

.contact-details {
    margin-bottom: 32px;
}

.contact-details p {
    font-size: 18px;
    line-height: 1.5;
    margin-bottom: 8px;
}

.contact-details a {
    color: var(--color-text);
    text-decoration: none;
    border-bottom: 1px solid var(--color-accent);
    transition: color 0.3s ease;
}

.contact-details a:hover {
    color: var(--color-accent);
}

.social-links {
    display: flex;
    gap: 24px;
    margin-bottom: 120px;
}

.social-links a {
    color: var(--color-text);
    transition: color 0.3s ease;
}

.social-links a:hover {
    color: var(--color-accent);
}

.copyright {
    font-size: 16px;
    color: var(--color-text);
}

/* Contact Form */
.contact-form {
    padding-top: 0;
}

.form-group {
    margin-bottom: 24px;
}

.form-group label {
    display: block;
    font-size: 16px;
    margin-bottom: 12px;
    color: var(--color-text);
}

.form-group input,
.form-group textarea {
    width: 100%;
    background-color: transparent;
    border: none;
    border-bottom: 1px solid #333;
    padding: 16px;
    font-size: 16px;
    color: var(--color-text);
    font-family: var(--font-primary);
    transition: border-color 0.3s ease;
}

.form-group input:focus,
.form-group textarea:focus {
    outline: none;
    border-bottom-color: var(--color-accent);
}

.form-group textarea {
    resize: vertical;
}

.btn-submit {
    background-color: var(--color-accent);
    color: var(--color-bg);
    padding: 16px 48px;
    border: none;
    border-radius: 27px;
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 0.5px;
    cursor: pointer;
    transition: transform 0.3s ease, background-color 0.3s ease;
}

.btn-submit:hover {
    background-color: #c5db6f;
    transform: translateY(-2px);
}

/* Responsive Design */
@media (max-width: 1024px) {
    .navigation {
        padding: 24px 32px;
    }

    .about-hero {
        padding: 60px 32px 40px;
    }

    .about-intro-content {
        grid-template-columns: 1fr;
        gap: 40px;
    }

    .capabilities-section {
        padding: 60px 32px;
    }

    .capabilities-content {
        grid-template-columns: 1fr;
        gap: 40px;
    }

    .experience-section {
        padding: 60px 32px;
    }

    .experience-container {
        grid-template-columns: 1fr;
        gap: 40px;
    }

    .contact-section {
        grid-template-columns: 1fr;
        padding: 60px 32px;
